    <script>
        function calculateScore() {
            const form = document.forms['quizForm'];
            let score = 0;
            const questions = ['q1', 'q2', 'q3', 'q4', 'q5', 'q6', 'q7', 'q8', 'q9', 'q10', 'q11', 'q12', 'q13', 'q14', 'q15', 'q16', 'q17', 'q18', 'q19', 'q20', 'q21', 'q22'];
            questions.forEach(question => {
                const answer = form[question].value;
                score += parseInt(answer);
            });
            const name = form['name'].value;
            const grade = form['grade'].value;
            score = Math.round(score / 100 * 100); // Convierte a porcentaje y redondea
            const resultContainer = document.getElementById('result');
            resultContainer.innerHTML = `<p>Nombre: ${name}</p>
                                         <p>Grado: ${grade}</p>
                                         <p>Tu puntaje es: ${score}</p>`;
        }
    </script>
